<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_my_recalls"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.recall.my_recalls.MyRecallsFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_bookmarked_recalls"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/design_bottom_navigation_height"
        android:scrollbars="none"
        tools:ignore="PrivateResource"
        tools:listitem="@layout/item_recall" />
</FrameLayout>