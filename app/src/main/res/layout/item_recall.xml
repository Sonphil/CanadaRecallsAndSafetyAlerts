<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_recall_category_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_shopping_cart_black_24dp" />

    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@+id/iv_recall_bookmark"
        app:layout_constraintStart_toEndOf="@+id/iv_recall_category_icon"
        app:layout_constraintTop_toTopOf="@+id/iv_recall_category_icon"
        tools:text="Santé Canada fixe une nouvelle limite de cyanure pour atténuer les risques associés à la consommation d'amandes d'abricot" />

    <TextView
        android:id="@+id/tv_recall_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_summary"
        app:layout_constraintTop_toBottomOf="@+id/tv_summary"
        tools:text="01-02-20" />

    <View
        android:id="@+id/view"
        android:layout_width="2dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:background="?android:attr/dividerVertical"
        app:layout_constraintStart_toEndOf="@+id/tv_recall_date"
        app:layout_constraintTop_toTopOf="@+id/tv_recall_date" />

    <TextView
        android:id="@+id/tv_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/tv_summary"
        tools:text="Aliments" />

    <ImageView
        android:id="@+id/iv_recall_bookmark"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_bookmark_border_black_24dp" />
</androidx.constraintlayout.widget.ConstraintLayout>