<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingTop="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="8dp"
    android:theme="@style/AppTheme"
    tools:context=".presentation.notification.AddNotificationKeywordDialogFragment">

    <EditText
        android:id="@+id/edit_text_notification_keyword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:hint="@string/label_hint_add_new_notification_keyword"
        android:imeOptions="actionDone"
        android:inputType="text" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_notification_keyword"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="8dp"
        android:text="@string/label_add_new_notification_keyword" />
</LinearLayout>