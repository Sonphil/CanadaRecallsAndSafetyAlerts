<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">@bool/light_status_bar</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:navigationBarColor">@color/colorSplashBackground</item>
    </style>

    <style name="RecallDetailsTheme" parent="AppTheme">
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Widget.AppTheme.Chip.Filter" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:textColor">@android:color/black</item>
        <item name="chipBackgroundColor">@android:color/white</item>
    </style>

    <style name="Widget.AppTheme.FloatingActionButton" parent="AppTheme">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="tint">@android:color/white</item>
    </style>

    <style name="AppTheme.BottomSheetDialog" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>
</resources>
