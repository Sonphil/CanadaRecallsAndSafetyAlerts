<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Theme.App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowLightStatusBar">@bool/light_system_bar</item>
        <item name="chipStyle">@style/Widget.App.Chip.Filter</item>
        <item name="collapsingToolbarLayoutStyle">@style/Widget.App.CollapsingToolbarLayout</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
        <item name="snackbarButtonStyle">@style/Widget.App.SnackbarButton</item>
        <item name="snackbarStyle">@style/Widget.App.Snackbar</item>
    </style>

    <style name="Theme.App" parent="Base.Theme.App">
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Theme.App.Splash">
        <item name="android:navigationBarColor">?colorSurface</item>
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorSurface">@color/colorSplashBackground</item>
    </style>

    <style name="Theme.App.RecallDetails">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="ThemeOverlay.App.Card" parent="">
        <item name="colorSurface">@color/colorCardView</item>
    </style>

</resources>